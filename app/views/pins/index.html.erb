<%= render 'pages/home' unless user_signed_in? %>

<div id="pins" class="clearfix transitions-enabled">
  <% @pins.each do |pin| %>
    <div class="box panel panel-default">
      <%= link_to image_tag(pin.image.url(:medium), class: 'img-responsive'), pin %>
      <div class="panel-body">
        <%= simple_format pin.description %>

        <div class="pinCredits">
          <%= link_to users_path pin.user do %>
            <%= pin.user.username %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
