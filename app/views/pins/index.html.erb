<div id="pins" class="clearfix transitions-enabled">
  <% @pins.each do |pin| %>
    <div class="box col3">
      <div>
        <%= image_tag pin.image.url(:medium) %>
      </div>
      <h2>
        <%= pin.description %>
      </h2>
      <div>
        <%= pin.user.email %>
      </div>
      <div>
        <%= link_to 'Show', pin %>
        <% if pin.user == current_user %>
          <%= link_to 'Edit', edit_pin_path(pin) %>
          <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
