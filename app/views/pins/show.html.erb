<ol class="breadcrumb">
  <li>
    <%= link_to 'Pins', pins_path %>
  </li>
  <li class="active">
    Pin <%= @pin.id %>
  </li>
</ol>

<div class="panel panel-default">
  <div class="panel-heading">
    <%= image_tag @pin.image.url(:medium), class: 'center-block' %>
  </div>
  <div class="panel-body">
    <%= simple_format @pin.description %>

    <p>
      <strong>
        <%= @pin.user.email %>
      </strong>
    </p>

    <% if @pin.user == current_user %>
      <p class="actions">
        <%= link_to 'Edit', edit_pin_path(@pin) %>
      </p>
    <% end %>
  </div>
</div>
