<ol class="breadcrumb">
  <li>
    <%= link_to 'Pins', pins_path %>
  </li>
  <li class="active">
    Pin <%= @pin.id %>
  </li>
</ol>

<div class="panel panel-default">
  <div class="panel-heading">
    <%= image_tag @pin.image.url(:medium), class: 'center-block img-responsive' %>
  </div>
  <div class="panel-body">
    <% if @pin.user == current_user %>
      <ul class="actions list-inline pull-right">
        <li>
          <%= link_to edit_pin_path(@pin) do %>
            <small>
              <span class="glyphicon glyphicon-edit"></span>
              Edit
            </small>
          <% end %>
        </li>
        <li>
          <%= link_to @pin, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <small>
              <span class="glyphicon glyphicon-trash"></span>
              Delete
            </small>
          <% end %>
        </li>
      </ul>
    <% end %>

    <div class="pull-left">
      <div class="media">
        <div class="pull-left">
          <%= image_tag 'http://placehold.it/50x50', class: 'media-object' %>
        </div>
        <div class="media-body">
          <h4 class="media-heading">
            <%= @pin.user.username %>
            <small class="text-muted">
              &middot; <%= time_ago_in_words @pin.created_at %> ago
            </small>
          </h4>
          <%= simple_format @pin.description %>
        </div>
      </div>
    </div>
  </div>
</div>
